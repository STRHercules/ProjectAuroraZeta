/* 
Paste this into your .vscode/launch.json file to set up debugging configurations for Project Aurora Zeta
Adjust the "program" paths if your build output is located elsewhere 
or has a different name. 
*/

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug - Linux (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Project Aurora Zeta",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable GDB pretty printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug - macOS (lldb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Project Aurora Zeta",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "lldb",
      "miDebuggerPath": "/usr/bin/lldb",
      "setupCommands": [
        {
          "text": "settings set target.run-args \"\"",
          "description": "Placeholder to keep LLDB happy with empty args",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug - Windows (MSVC)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\Project Aurora Zeta.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug - Windows (MinGW gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\Project Aurora Zeta.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable GDB pretty printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
